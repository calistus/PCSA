<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:background="@color/background_app"
    tools:context="com.peacecorps.pcsa.CircleOfTrustFragment"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/Title_color"
            android:text="@string/circle_title"
            />
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/Title_color"
            android:src="@mipmap/ic_edit_button"
            android:textSize="20dp"
            android:background="@drawable/btn_rounded_rectangle"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/com1Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/Title_color"
                android:textSize="20dp"
                android:background="@drawable/btn_rounded_rectangle"
                android:src="@mipmap/ic_comrade"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"/>
            <ImageButton
                android:id="@+id/com2Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/Title_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="20dp"
                android:background="@drawable/btn_rounded_rectangle"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/com6Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/Title_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="20dp"
                android:background="@drawable/btn_rounded_rectangle"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="12dp"/>

            <ImageButton
                android:id="@+id/requestButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/Title_color"
                android:background="@mipmap/ic_help_me"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"/>
            <ImageButton
                android:id="@+id/com3Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/Title_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="20dp"
                android:background="@drawable/btn_rounded_rectangle"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="54dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/com5Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/Title_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="20dp"
                android:background="@drawable/btn_rounded_rectangle"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"/>
            <ImageButton
                android:id="@+id/com4Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/Title_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="20dp"
                android:background="@drawable/btn_rounded_rectangle"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
